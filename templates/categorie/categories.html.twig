{%  extends 'base.html.twig' %}
{% block body %}
<h1>{{ titre }}</h1>
<ul>
    {% for categorie in categories %}
            {% if categorie.tarif == null %}
                <li><a href="{{  path('categorie', {id:categorie.id}) }}">{{categorie.libelle~ " gratuit"}}</a></li>
            {% else %}
                    <li><a href="{{  path('categorie', {id:categorie.id}) }}">{{categorie.libelle~ " " ~categorie.tarif ~ "€"}}</a></li>
            {% endif%}
    {% endfor %}
</ul>
<br>

    {% if is_granted('ROLE_SECRETAIRE') %}
    <h4><a href = {{ path('newcategorie') }}>Ajouter une catégorie de salle </a></h4>
<h4><a href = {{ path('tarifs') }}>Modifier les tarifs </a></h4>
    {% endif %}
<h4><a href = {{ path('accueil') }}>retour à l'accueil </a></h4>

{% endblock %}

